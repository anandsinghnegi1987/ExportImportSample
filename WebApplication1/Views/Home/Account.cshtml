
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    window.onunload = function () { null };
</script>


<div class="container">
    <div class="box">
        <div id="loginbox" style="margin-top:50px" class="wrapper">

            <form action="@Url.Action("Login","Home")" method="post" name="Login_Form" class="form-signin">
                <h2 class="form-signin-heading">Welcome Back!</h2>
               
                <hr class="colorgraph"><br>
               
                @Html.TextBox("Username", "", new { @class = "form-control", required = "", placeholder = "Username" })
                <br />
                @Html.TextBox("Password", "", new { @class = "form-control", required = "", type = "password", placeholder = "Password" })
              

                <button class="btn btn-lg btn-primary btn-block" name="Submit" value="Login" type="Submit">Login</button>
                <br />

                <label>Don't have an account!</label>
                <a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                    Sign Up Here
                </a>
            </form>

        </div>
        <div id="signupbox" style="display:none;margin-top:50px" class="wrapper">
            <form action="" method="post" name="Login_Form" class="form-signin">
                <h3 class="form-signin-heading">Create an account</h3>
                <hr class="colorgraph"><br>

                @Html.TextBox("Name", "", new { @class = "form-control", required = "", placeholder = "Name" })
                <br />
                @Html.TextBox("Email", "", new { @class = "form-control", required = "", placeholder = "Email" })
                <br />
                @Html.TextBox("PhoneNo", "", new { @class = "form-control", required = "", placeholder = "Mobile No" })
                <br />
                @Html.TextBox("FaxNo", "", new { @class = "form-control", required = "", placeholder = "Fax No" })
                <br />

                <button class="btn btn-lg btn-primary btn-block" name="Submit" value="Sign Up" type="Submit">Sign Up</button>

                <br />

                <label>Already have an account!</label>
                <a href="#" onClick="$('#signupbox').hide(); $('#loginbox').show()">
                    Sign In
                </a>

            </form>
        </div>
    </div>
</div>
